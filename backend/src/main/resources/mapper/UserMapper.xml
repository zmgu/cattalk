<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ex.backend.user.mapper.UserMapper">
    <typeAlias type alias>
    </typeAlias>
    <!-- Users 매핑-->
    <resultMap type="User" id="userMap">
        <id property="userId" column="userid" />

        <result property="username" column="username" />
        <result property="nickname" column="nickname" />
        <result property="password" column="password" />
        <result property="role" column="role" />
        <result property="name" column="name" />
        <result property="email" column="email" />
        <result property="enabled" column="enabled" />
        <result property="regDate" column="reg_date" />
    </resultMap>

    <resultMap id="friend" type="com.ex.backend.user.dto.User">
        <id property="userId" column="userid"/>
        <result property="nickname" column="nickname"/>
    </resultMap>

    <select id="findByUsername" resultType="User">
        SELECT *
        FROM users
        WHERE username = #{username}
    </select>

    <!-- 유저 리스트 조회 -->
    <select id="selectUserList" resultMap="friend">
        SELECT userid, nickname
        FROM users
    </select>

    <select id="findOneByUsername" resultType="Long">
        SELECT userid
        FROM user
        WHERE username = #{username}
    </select>

    <insert id="save">
        INSERT INTO users(username, password, name, email, role)
        VALUES (#{username}, #{password}, #{name}, #{email}, #{role})
    </insert>

    <insert id="insert">
        INSERT INTO users(username, password, name, email, role)
        VALUES (#{username}, #{password}, #{name}, #{email}, #{role})
    </insert>

    <insert id="oauthSave">
        INSERT INTO users(username, name, email, role)
        VALUES (#{username}, #{name}, #{email}, #{role})
    </insert>

    <update id="update">
        UPDATE users
        SET name = #{name}
          ,email = #{email}
        WHERE username = #{username}
    </update>
</mapper>